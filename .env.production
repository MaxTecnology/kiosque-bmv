# =============================================================================
# HUNGERZ - CONFIGURAÇÃO DE PRODUÇÃO
# =============================================================================
# IMPORTANTE: Substitua os valores entre <> pelos valores reais
# =============================================================================

# APLICAÇÃO - PRODUÇÃO
APP_NAME=Hungerz
APP_ENV=production
APP_KEY=<COPIE_A_KEY_DO_ENV_LOCAL>
APP_URL=https://<SEU_DOMINIO>
APP_DEBUG=false
APP_LOG_LEVEL=error
APP_DEBUG_EMAILS=null
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_ADDITIONAL_LOCALES=null
APP_LOGO=
APP_TIMEZONE=UTC
APP_LOCALES=en

# DATABSE - PRODUÇÃO (SENHAS FORTES!)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=hungerz
DB_USERNAME=laravel
DB_PASSWORD=<SENHA_FORTE_MYSQL_LARAVEL>
# Root password (usado internamente pelo Docker)
DB_ROOT_PASSWORD=<SENHA_FORTE_MYSQL_ROOT>

# REDIS - PRODUÇÃO
REDIS_HOST=redis
REDIS_PASSWORD=<SENHA_FORTE_REDIS>
REDIS_PORT=6379

# CACHE
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# QUEUE - PRODUÇÃO
QUEUE_CONNECTION=redis
USE_QUEUE=1

# MAIL - PRODUÇÃO (Configure seu provedor real)
MAIL_DRIVER=smtp
MAIL_HOST=<SEU_SMTP_HOST>
MAIL_PORT=587
MAIL_USERNAME=<SEU_EMAIL_SMTP>
MAIL_PASSWORD=<SUA_SENHA_SMTP>
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=<EMAIL_DO_HUNGERZ>
MAIL_FROM_NAME=Hungerz

# MAILGUN (se usar)
MAILGUN_DOMAIN=<SEU_DOMINIO_MAILGUN>
MAILGUN_SECRET=<SUA_SECRET_MAILGUN>

# SES (se usar)
SES_KEY=<SUA_KEY_SES>
SES_SECRET=<SEU_SECRET_SES>

# PAYMENT GATEWAY - PRODUÇÃO
# STRIPE
STRIPE_KEY=<SUA_STRIPE_PUBLIC_KEY_PRODUCAO>
STRIPE_SECRET=<SUA_STRIPE_SECRET_KEY_PRODUCAO>

# PAYSTACK
PAYSTACK_SECURE_KEY=<SUA_PAYSTACK_KEY_PRODUCAO>

# MOLLIE
MOLLIE_API_KEY=<SUA_MOLLIE_KEY_PRODUCAO>

# WIPAY
WIPAY_DEVELOPER_ID=<SEU_WIPAY_ID_PRODUCAO>
WIPAY_URL=<URL_WIPAY_PRODUCAO>
WIPAY_ACCOUNT_NUMBER=<SEU_ACCOUNT_WIPAY>
WIPAY_VOUCHER_URL=<URL_VOUCHER_WIPAY_PRODUCAO>

# APPLE IN-APP
APPLE_INAPP_SHARED_SECRET=<SEU_APPLE_SECRET>

# FIREBASE - PRODUÇÃO
FIREBASE_ID=<SEU_FIREBASE_PROJECT_ID>
FIREBASE_USE_NEW_RTDB_URI=1
FIREBASE_SERVICE_ACCOUNT_JSON=firebase-prod.json

# ONESIGNAL - PRODUÇÃO
ONESIGNAL_APP_ID_CUSTOMER=<SEU_ONESIGNAL_APP_ID_CUSTOMER>
ONESIGNAL_REST_API_CUSTOMER=<SUA_ONESIGNAL_API_CUSTOMER>
ONESIGNAL_APP_ID_VENDOR=<SEU_ONESIGNAL_APP_ID_VENDOR>
ONESIGNAL_REST_API_VENDOR=<SUA_ONESIGNAL_API_VENDOR>
ONESIGNAL_APP_ID_DELIVERY=<SEU_ONESIGNAL_APP_ID_DELIVERY>
ONESIGNAL_REST_API_DELIVERY=<SUA_ONESIGNAL_API_DELIVERY>

# SOCIAL LOGIN - PRODUÇÃO
GOOGLE_CLIENT_ID=<SEU_GOOGLE_CLIENT_ID>
GOOGLE_IOS_CLIENT_ID=<SEU_GOOGLE_IOS_CLIENT_ID>
GOOGLE_IOS_PROVIDER_CLIENT_ID=<SEU_GOOGLE_IOS_PROVIDER_CLIENT_ID>
FACEBOOK_APP_ID=<SEU_FACEBOOK_APP_ID>
FACEBOOK_APP_SECRET=<SEU_FACEBOOK_APP_SECRET>

# CONFIGURAÇÕES DE PRODUÇÃO
DEMO_ENABLED=false
MOBILE_NUMBER_LENGTH=10

# TELESCOPE - DESABILITADO EM PRODUÇÃO (SEGURANÇA)
TELESCOPE_ENABLED=false
TELESCOPE_CACHE_WATCHER=false
TELESCOPE_DUMP_WATCHER=false
TELESCOPE_JOB_WATCHER=false
TELESCOPE_MAIL_WATCHER=false
TELESCOPE_MODEL_WATCHER=false
TELESCOPE_REDIS_WATCHER=false
TELESCOPE_GATE_WATCHER=false
TELESCOPE_QUERY_WATCHER=false
TELESCOPE_NOTIFICATION_WATCHER=false
TELESCOPE_VIEW_WATCHER=false
TELESCOPE_SCHEDULE_WATCHER=false
TELESCOPE_COMMAND_WATCHER=false

# SANCTUM - CONFIGURAÇÃO PARA SEU DOMÍNIO
SANCTUM_STATEFUL_DOMAINS=<SEU_DOMINIO>,www.<SEU_DOMINIO>

# CONFIGURAÇÕES DE SEGURANÇA EXTRAS
BCRYPT_ROUNDS=12

# LOGS - PRODUÇÃO
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_DAYS=14

# =============================================================================
# CHECKLIST ANTES DE USAR EM PRODUÇÃO:
# =============================================================================
# 
# ✅ 1. Substituir <SEU_DOMINIO> pelo domínio real
# ✅ 2. Gerar senhas fortes para DB_PASSWORD, DB_ROOT_PASSWORD, REDIS_PASSWORD
# ✅ 3. Configurar provedor de email real (SMTP/Mailgun/SES)
# ✅ 4. Usar chaves de PRODUÇÃO para pagamentos (Stripe, PayStack, etc)
# ✅ 5. Configurar Firebase de produção
# ✅ 6. Configurar OneSignal de produção
# ✅ 7. Configurar Google/Facebook para produção
# ✅ 8. Copiar APP_KEY do .env local (ou gerar nova)
# ✅ 9. Verificar se SANCTUM_STATEFUL_DOMAINS está correto
# ✅ 10. Upload do firebase-prod.json se usar Firebase
# 
# =============================================================================